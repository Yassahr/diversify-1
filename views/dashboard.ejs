<%- include('partials/header') -%>
<h1 class="my-10 text-slate-300 text-5xl drop-shadow-2xl">Dashboard</h1>
    <div>
    <!-- Playlist -->
   <div>
    <h2>All Playlist</h2>

   <!-- list of Playlists -->
    <ul class="flex justify-center">
        <!-- list of all of the playlist -->
        <% playlist.forEach(ele=>{ %>
        <li class="border border-slate-500">
            <h2 class="text-slate-300"><%= ele.name %></h2>
            <div>
                <!-- Likes -->
                <span class="text-slate-300"><%= ele.likes %></span>
                <button class="text-slate-300">Like Button</button>
            </div>
            <!--List of media inside of playlist -->
            <ul class="flex">
                <!-- Individual media block -->
                <li class="border border-slate-500">
                    <div>
                        <!-- Media name -->
                        <h3 class="text-slate-300">Media Name</h3>
                        <!-- Thumbnail Image of Video -->
                        <imgz src="#"/> 
                    <!-- Media description -->
                    <p class="text-slate-300">Description of media</p>
                        
                    </div>
                </li>
            <% }) %>    
            </ul>
        </li>
    </ul>
</div>