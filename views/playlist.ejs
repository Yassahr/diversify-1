<%- include('partials/header') -%>
<!-- table-->
<section class="bg-gray-50 dark:bg-gray-900 p-3 sm:p-5">
    <div class="mx-auto max-w-screen-xl px-4 lg:px-12">
        <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden">
            <div class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0 md:space-x-4 p-4">
                <div class="w-full md:w-1/2">
                    <form class="flex items-center max-w-sm mx-auto">   
                        <label for="simple-search" class="sr-only">Search</label>
                        <div class="relative w-full">
                            <input type="text" id="simple-search" name="query" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search" required />
                        </div>
                        <button type="submit" class=" search p-2.5 ms-2 text-sm font-medium text-white bg-blue-700 rounded-lg border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                            <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                            </svg>
                            <span class="sr-only">Search</span>
                        </button>
                    </form>  
                </div>
               
            </div>
            <div class="text-slate-300 py-5 ">
                <p class="noResults text-slate-300"></p>
                <!-- this will hold a slide of all of the media results a caroseul -->
                <!-- When ejs return then remove the over-flow hiddle and make the h-full overflow-hidden h-0 -->
                <div class="videoGallery grid grid-cols-2 md:grid-cols-3 gap-4 h-0 overflow-hidden">
                </div>
                <!--  -->
              </div>
            <div class="overflow-x-auto">
                <span class="text-gray-400">Playlist</span>
                <h1 class="text-4xl font-extrabold dark:text-white">
                    <%=playlist.name%>
                </h1>
                <%if(mediaList.length==0){%>
                    <p class="mb-3 text-lg text-gray-500 md:text-xl dark:text-gray-400">Playlist empty. Use Search to add new media to <%=playlist.name%> playlist</p>
                <% } else{ %> 
   
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col" class="px-4 py-3">Name</th>
                                <th scope="col" class="px-4 py-3">Description</th>
                                <th scope="col" class="px-4 py-3">Likes</th>
                                <th scope="col" class="px-4 py-3">
                                    <span class="sr-only"></span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <%mediaList.forEach((ele, i)=>{ %>
                                <tr class="border-b dark:border-gray-700">
                                    <th scope="row" class="px-4 py-3 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                        <a href="/media/<%=ele.id%>" class="hover:text-gray-400">
                                            <%=ele.name%>
                                        </a>                              
                                    </th>
                                    <td class="px-4 py-3"><%=ele.description%></td>
                                    <td class="px-4 py-3"><%=ele.likes||0%></td>
                                    <td class="px-4 py-3 flex items-center justify-end">
                                        <a href="#" class="block py-2 px-4 text-sm text-white-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                <% } %>
            </div>
         
        </div>
    </div>
    </section>


<%- include('partials/footer') -%>